<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtbola"
        android:text="Sphere"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:padding="10dp"
        android:fontFamily="@font/poppinssemibold"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="230dp"
        android:id="@+id/cardrumusbola"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:padding="4dp"

        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/bola"

            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:id="@+id/rumusluaspermukaanbola"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:padding="4dp"
        android:layout_margin="10dp"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="surface area of sphere"
               android:layout_gravity="center_horizontal"
               android:textSize="18dp"
               android:textStyle="bold"
               android:padding="8dp"
               android:fontFamily="@font/poppinssemibold"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=" 4 ₶ r²"
               android:layout_gravity="center"
               android:textSize="38dp"
               android:textStyle="bold"
               android:padding="6dp"
               android:fontFamily="@font/poppinssemibold"
               />
           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/button"
               android:text="calculate"
               android:fontFamily="@font/poppinssemibold"
               android:layout_gravity="center_horizontal"
               android:id="@+id/btnBola"
               />
       </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:id="@+id/rumusvolumebola"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:padding="4dp"
        android:layout_margin="10dp"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="volume"
               android:layout_gravity="center_horizontal"
               android:textSize="18dp"
               android:textStyle="bold"
               android:padding="8dp"
               android:fontFamily="@font/poppinssemibold"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="4/3 ₶ r³"
               android:layout_gravity="center"
               android:textSize="38dp"
               android:textStyle="bold"
               android:padding="6dp"
               android:fontFamily="@font/poppinssemibold"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="₶ : pi         r : radius"
               android:layout_gravity="center|bottom"
               android:textSize="18dp"
               android:textStyle="bold"
               android:padding="6dp"
               android:fontFamily="@font/poppinssemibold"
               />
       </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
